{
  "manifest_version": 2,

  "name": "Cameleon",
  "description": "Let's you quickly preview your web app in multiple device viewports.",
  "version": "1.1.1",

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "options_page": "options_page/options.html",
  
  "background": {
    "scripts": ["background_page/background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "View in Cameleon"
  }
}