{
  "manifest_version": 2,

  "name": "Chameleon",
  "short_name": "Chameleon",
  "description": "Let's you quickly preview your web app in multiple device viewports.",
  "version": "1.1.4",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "options_page": "options_page/options.html",
  
  "background": {
    "scripts": ["background_page/background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_title": "View in Chameleon"
  }
}